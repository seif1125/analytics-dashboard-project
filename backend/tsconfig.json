{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",           // Tells the compiler where the source code is
    "outDir": "./dist",           // Where to output compiled JS files
    "esModuleInterop": true,      // For easier module imports (allows `import express from 'express'`)
    "forceConsistentCasingInFileNames": true,
    "strict": true,               // Enable all strict type-checking options
    "skipLibCheck": true
  },
  "include": ["src/**/*",]
}

